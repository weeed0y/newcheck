


_get_repolink () {
    local regex
    regex='(https?)://github.com/.+/.+'
    if [[ $PYTHON_REPO == "PYTHONBOT" ]]
    then
        echo "aHR0cHM6Ly9naXRodWIuY29tL0xFR0VORC1MWC9QWVRIT05VU0VSQk9UL2FyY2hpdmUvbWFpbi56aXA" | base64 -d
    elif [[ $PYTHON_REPO == "PYTHONBOT" ]]
    then
        echo "aHR0cHM6Ly9naXRodWIuY29tL0xFR0VORC1MWC9QWVRIT05VU0VSQk9UL2FyY2hpdmUvbWFpbi56aXA" | base64 -d
    elif [[ $PYTHON_REPO =~ $regex ]]
    then
        if [[ $PYTHON_REPO_BRANCH ]]
        then
            echo "${PYTHON_REPO}/archive/${PYTHON_REPO_BRANCH}.zip"
        else
            echo "${PYTHON_REPO}/archive/master.zip"
        fi
    else
        echo "aHR0cHM6Ly9naXRodWIuY29tL0xFR0VORC1MWC9QWVRIT05VU0VSQk9UL2FyY2hpdmUvbWFpbi56aXA" | base64 -d
    fi
}


_set_bot () {
    local zippath
    zippath="PYTHONBOT.zip"
    echo "  Downloading ğŸ’¥ğŸ’«PythonBot~ProğŸ’«ğŸ’¥ Source Code..."
    wget -q $(_get_repolink) -O "$zippath"
    echo "  Unpacking Data ..."
    PYTHONPATH=$(zipinfo -1 "$zippath" | grep -v "/.");
    unzip -qq "$zippath"
    echo "Done"
    echo "  ğŸ’¥ğŸ’«PythonBot~ProğŸ’«ğŸ’¥ Cleaning.."
    rm -rf "$zippath"
    sleep 5
    cd $PYTHONPATH
    echo "   âœ¨â˜„ï¸ Ñ•Ï„Î±ÑÏ„Î¹Ğ¸g Ñ•Ğ¼Î¿Î¿Ï„Ğ½Ñ”Ñ•Ï„ ğŸ’¥ğŸ’«Pythonğ•­Ã¸ğ–™ğŸ’«ğŸ’¥ âœ¨â˜„ï¸     "
    echo "
    PYTHONBOT
    "

    python3 ../setup/updater.py ../requirements.txt requirements.txt
    python3 -m userbot
}

_set_bot


